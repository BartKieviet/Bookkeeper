{
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"background": {
		"scripts": [ "sector.js", "building.js", "background.js" ],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [ "*://*.pardus.at/building_trade.php*" ],
			"js": [ "functions.js", "sector.js", "building.js",
				"commodity.js", "trade.js" ],
			"all_frames": true
		},
		{
			"matches": [ "*://*.pardus.at/overview_buildings.php*" ],
			"js": [ "functions.js", "sector.js", "building.js",
				"commodity.js", "table.js", "overview.js",
				"overviewbuildings.js" ],
			"css": [ "bookkeeper.css" ],
			"all_frames": true
		},
		{
			"matches": [ "*://*.pardus.at/main.php*" ],
			"js": [ "info-min.js", "nav.js" ],
			"css": [ "nav.css" ],
			"all_frames": true
		},
		{
			"matches": [ "*://*.pardus.at/index_buildings.php*" ],
			"js": [ "functions.js", "sector.js", "building.js",
				"commodity.js", "bldgindex.js" ],
			"css": [ "bookkeeper.css" ],
			"all_frames": false
		},
		{
			"matches": [ "*://*.pardus.at/building_trade_settings.php*" ],
			"js": [ "functions.js", "building.js", "buildingtradesettings.js" ],
			"all_frames": true
		},
		{
			"matches": [ "*://*.pardus.at/building_management.php*" ],
			"js": [ "functions.js", "building.js", "management.js" ],
			"css": [ "bookkeeper.css" ],
			"all_frames": true
		},
		{
			"matches": [
				"*://*.pardus.at/planet_trade.php*",
				"*://*.pardus.at/starbase_trade.php*"
			],
			"js": [ "starbasetrade.js" ],
			"css": [ "nav.css" ],
			"all_frames": true
		}
	],
	"description": "User trade interface enhancements for the online game Pardus",
	"manifest_version": 2,
	"minimum_chrome_version": "42",
	"name": "Pardus Bookkeeper",
	"permissions": [ "notifications", "storage" ],
	"version": "2.1",
	"browser_action": {
		"default_title": "Trade info",
		"default_popup": "popup.html"
	},
	"icons": {
		"16":  "icons/16.png",
		"24":  "icons/24.png",
		"48":  "icons/48.png",
		"64":  "icons/64.png",
		"128": "icons/128.png"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"web_accessible_resources": [
		"icons/16.png",
		"icons/24.png",
		"icons/48.png",
		"icons/minus.svg",
		"icons/mingray.svg",
		"icons/plus.svg",
		"icons/plusgray.svg",
		"html/bbox.html",
		"html/overview.html"
	]
}
