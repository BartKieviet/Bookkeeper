{
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"background": {
		"scripts": [ "sector.js", "building.js", "background.js" ],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [ "*://*.pardus.at/building_trade.php*" ],
			"js": [ "functions.js", "universe.js", "sector.js",
				"building.js", "trade.js" ],
			"all_frames": true
		},
		{
			"matches": [ "*://*.pardus.at/overview_buildings.php*" ],
			"js": [ "functions.js", "universe.js", "sector.js",
				"building.js", "overview.js" ],
			"css": [ "bookkeeper.css" ],
			"all_frames": true
		},
		{
			"matches": [ "*://*.pardus.at/main.php*" ],
			"js": [ "nav.js" ],
			"all_frames": true
		}
	],
	"description": "User trade interface enhancements for the online game Pardus",
	"manifest_version": 2,
	"minimum_chrome_version": "42",
	"name": "Pardus Bookkeeper",
	"permissions": [ "storage", "*://*.pardus.at/*" ],
	"version": "1.8.1",
	"browser_action": {
		"default_title": "Trade info",
		"default_popup": "popup.html"
	},
	"icons": {
		"16":  "icons/16.png",
		"24":  "icons/24.png",
		"48":  "icons/48.png",
		"64":  "icons/64.png",
		"128": "icons/128.png"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"web_accessible_resources": [ "icons/24.png" ]
}
